<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" prefHeight="483.0" prefWidth="507.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hydra.hydratoggle.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox prefHeight="50.0" prefWidth="430.0" VBox.vgrow="NEVER">
        <Label fx:id="title" alignment="TOP_CENTER" contentDisplay="TOP" prefHeight="31.0" prefWidth="311.0" text="Hydra Toggle">
          <font>
              <Font size="21.0" />
          </font>
        </Label>
      <ToggleButton fx:id="darkModeButton" maxHeight="24.0" maxWidth="24.0" minHeight="24.0" minWidth="24.0" mnemonicParsing="false" onAction="#onDarkModeClick" prefHeight="24.0" prefWidth="24.0" />
    </HBox>
   <Label fx:id="errorLabel" maxWidth="1.7976931348623157E308" prefHeight="36.0" prefWidth="265.0" textFill="#f60808" textOverrun="LEADING_ELLIPSIS" wrapText="true" VBox.vgrow="ALWAYS">
      <font>
         <Font name="System Bold" size="10.0" />
      </font>
   </Label>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <Label fx:id="staticCurrentClientLabel" prefHeight="25.0" prefWidth="112.0" text="Current Client:  ">
           <font>
               <Font size="16.0" />
           </font>
        </Label>
        <Label fx:id="currentClientLabel" prefHeight="25.0" prefWidth="155.0" textFill="#18e406">
           <font>
               <Font name="System Bold" size="16.0" />
           </font>
        </Label>
      <ImageView fx:id="imageView" fitHeight="61.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" style="-fx-padding: 5; -fx-background-color: black; -fx-background-radius: 5;" />
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <Button fx:id="runeLiteButton" alignment="CENTER" contentDisplay="CENTER" onAction="#onRuneLiteButtonClick" prefHeight="38.0" prefWidth="186.0" style="-fx-padding: 10px; -fx-border-insets: 10px; -fx-background-insets: 10px;" text="Switch to RuneLite" />
        <Button fx:id="hydraButton" mnemonicParsing="false" onAction="#onHydraButtonClick" prefHeight="38.0" prefWidth="171.0" style="-fx-padding: 10px; -fx-border-insets: 10px; -fx-background-insets: 10px;" text="Switch to Hydra">
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin></Button>
      <opaqueInsets>
         <Insets left="10.0" right="10.0" />
      </opaqueInsets>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </HBox>
   <Button fx:id="launchButton" mnemonicParsing="false" onAction="#onLaunch" prefHeight="25.0" prefWidth="329.0" text="Launch Client" />
</VBox>
